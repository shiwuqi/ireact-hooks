{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "ES2015",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ES6",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib"
  },
  "exclude": ["node_modules", "**/test", "**/lib"]
}